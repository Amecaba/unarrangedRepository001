<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/parentlayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.07"
            android:id="@+id/methodview"
            android:textSize="40dp"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:id="@+id/mainview"
            android:background="@drawable/line"
            android:textSize="45dp"
            android:text="0"
            android:gravity="center_vertical|right"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:textSize="20dp"
        android:gravity="center_vertical|right"
        android:id="@+id/pastcalc"
        android:text="0"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:textSize="30dp"
        android:gravity="center_vertical|right"
        android:text="0"
        android:id="@+id/pastview"
        />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:columnCount="5"
        android:rowCount="6"
        android:id="@+id/mainlayout"
        >

        <Button
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:text="GT"
            android:id="@+id/buttonGT"
            />

        <Button
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:text="+/-"
            android:id="@+id/buttonPM"
            />

        <Button
            android:layout_column="2"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:text="√"
            android:id="@+id/buttonroot"
            />

        <Button
            android:layout_column="3"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:text="→"
            android:id="@+id/buttonarrow"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="4"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0.6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/buttonCA"
            android:src="@drawable/selectorbuttonca"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/buttonCM"
            android:src="@drawable/selectorbuttoncm"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/buttonRM"
            android:src="@drawable/selectorbuttonrm"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/buttonMM"
            android:src="@drawable/selectorbuttonmminus"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/buttonMP"
            android:src="@drawable/selectorbuttonmplus"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="4"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/buttonC"
            android:src="@drawable/selectorbuttonc"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/button7"
            android:src="@drawable/selectorbutton7"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/button8"
            android:src="@drawable/selectorbutton8"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/button9"
            android:src="@drawable/selectorbutton9"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="3"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/buttonpercent"
            android:src="@drawable/selectorbuttonpercent"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="4"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/buttonCE"
            android:src="@drawable/selectorbuttonce"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/button4"
            android:src="@drawable/selectorbutton4"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/button5"
            android:src="@drawable/selectorbutton5"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/button6"
            android:src="@drawable/selectorbutton6"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/buttontimes"
            android:src="@drawable/selectorbuttontimes"

        />

        <ImageButton
            android:padding="2dp"
            android:layout_column="4"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/buttondevide"
            android:src="@drawable/selectorbuttondevide"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/button1"
            android:src="@drawable/selectorbutton1"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/button2"
            android:src="@drawable/selectorbutton2"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/button3"
            android:src="@drawable/selectorbutton3"
            />


        <ImageButton
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/selectorbuttonplus"
            android:id="@+id/buttonplus"
            android:layout_column="3"
            android:layout_row="4"
            android:layout_rowSpan="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="4"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/buttonminus"
            android:src="@drawable/selectorbuttonminus"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/button0"
            android:src="@drawable/selectorbutton0"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/button000"
            android:src="@drawable/selectorbutton000"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/buttondot"
            android:src="@drawable/selectorpoint"
            />

        <ImageButton
            android:padding="2dp"
            android:layout_column="4"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:scaleType="fitXY"
            android:id="@+id/buttonequal"
            android:src="@drawable/selectorbuttonequal"
            />


    </GridLayout>

</LinearLayout>
